@model List<CategoryDto>
<div class="container-xxl flex-grow-1 container-p-y">
	<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Kategori Yönetimi</span> Kategori Ekle</h4>

	<!-- Basic Bootstrap Table -->
	<div class="card p-5">
		<a class="btn btn-success" asp-area="Admin" asp-controller="Category" asp-action="Add">
			Makale Ekle <i class="bx bx-plus"></i>
		</a>
		<table class="table table-bordered" id="categoriesTable" width="100%" collspacing="0">
			<thead>
				<tr>
					<th>İsim</th>
					<th>Oluşturma Tarihi</th>
					<th>Oluşturan</th>
					<th>Durum</th>
					<th>İşlemler</th>
				</tr>
			</thead>
			<tfoot>
			<th>İsim</th>
			<th>Oluşturma Tarihi</th>
			<th>Oluşturan</th>
			<th>Durum</th>
			<th>İşlemler</th>
			</tfoot>
			<tbody class="table-border-bottom-0">
				@foreach (var category in Model)
				{
					<tr name="@category.Id">
						<th>@category.Name</th>
						<th>@category.CreatedDate.ToShortDateString()</th>
						<th>@category.CreatedBy</th>
						<th>@(category.IsDeleted ? "Aktif Değil" : "Aktif")</th>
						<th>
							<a class="btn btn-primary btn-sm" data-id="@category.Id" asp-area="Admin" asp-controller="Category" asp-action="Update" asp-route-categoryId="@category.Id">
								<i class="bx bxs-edit"></i>
							</a>

							<a class="btn btn-danger btn-sm" data-id="@category.Id" asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-categoryId="@category.Id">
								<i class="bx bxs-minus-circle"></i>
							</a>
						</th>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
</div>


@section Scripts{
	<script src="~/js/userIndex.js" type="application/ecmascript"></script>
}