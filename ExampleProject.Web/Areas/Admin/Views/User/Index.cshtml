@model List<UserDto>
<div class="container-xxl flex-grow-1 container-p-y">
	<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Kategori Yönetimi</span> User Ekle</h4>

	<!-- Basic Bootstrap Table -->
	<div class="card p-5">
		<a class="btn btn-success" asp-area="Admin" asp-controller="User" asp-action="Add">
			User Ekle <i class="bx bx-plus"></i>
		</a>
		<table class="table table-bordered" id="usersTable" width="100%" collspacing="0">
			<thead>
				<tr>
					<th>İsim</th>
					<th>Soyisim</th>
					<th>Email</th>
					<th>Telefon Numarası</th>
					<th>Rol</th>
					<th>Emial Doğrulama</th>
					<th>Bağlantı Hataları</th>
					<th>İşlemler</th>
				</tr>
			</thead>
			<tfoot>
					<th>İsim</th>
					<th>Soyisim</th>
					<th>Email</th>
					<th>Telefon Numarası</th>
					<th>Rol</th>
					<th>Emial Doğrulama</th>
					<th>Bağlantı Hataları</th>
					<th>İşlemler</th>
			</tfoot>
			<tbody class="table-border-bottom-0">
				@foreach (var user in Model)
				{
					<tr name="@user.Id">
						<th>@user.FirstName</th>
						<th>@user.LastName</th>
						<th>@user.Email</th>
						<th>@user.PhoneNumber</th>
						<th>@user.Role</th>
						<th>@(user.EmailConfirmed ? "Doğrulanmış" : "Doğrulanmamış")</th>
						<th>@user.AccessFailedCount</th>
						<th>
							<a class="btn btn-primary btn-sm" data-id="@user.Id" asp-area="Admin" asp-controller="User" asp-action="Update" asp-route-userId="@user.Id">
								<i class="bx bxs-edit"></i>
							</a>

							<a class="btn btn-danger btn-sm" data-id="@user.Id" asp-area="Admin" asp-controller="User" asp-action="Delete" asp-route-userId="@user.Id">
								<i class="bx bxs-minus-circle"></i>
							</a>
						</th>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
</div>


@section Scripts{
	<script src="~/js/usersIndex.js" type="application/ecmascript"></script>
}